---
import { Icon } from 'astro-icon/components';

// Layout & Sections
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import About from '~/components/widgets/About.astro';
import Services from '~/components/widgets/Services.astro';
import Projects from '~/components/widgets/Projects.tsx';
import Testimonials from '~/components/widgets/Testimonials';
import WhyChooseUs from '~/components/widgets/WhyChooseUs.astro';
import CTA from '~/components/widgets/CTA.astro';
import Contact from '~/components/widgets/Contact.astro';

// Content & Data
import { heroContent } from '~/data/pageContent.astro';
---

<Layout>
	<Hero
		actions={heroContent}
		backgroundImage={{
			src: '~/assets/premier-hero-bg.jpeg',
			alt: 'Premier Renovations Hero Image',
		}}
		badges
	>
		<Fragment slot="title">
			Bring Your Dream Home to
			<span class="text-accent-400">Life</span>
		</Fragment>
	</Hero>
	<About />
	<Services />
	<Projects client:load />
	<Testimonials client:load />
	<WhyChooseUs />
	<CTA />
	<Contact />
</Layout>
