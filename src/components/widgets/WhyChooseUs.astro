---
import { Icon } from 'astro-icon/components';

const reasons = [
	{
		icon: 'lucide:shield',
		title: 'Licensed & Insured',
		description:
			'Fully licensed contractors with comprehensive insurance coverage for your peace of mind.',
	},
	{
		icon: 'lucide:dollar-sign',
		title: 'Transparent Quotes',
		description:
			'No hidden fees or surprise charges. Detailed estimates with clear pricing breakdown.',
	},
	{
		icon: 'lucide:award',
		title: '5-Star Reviews',
		description:
			"Consistently rated 5 stars by our customers across Google, Yelp, and Angie's List.",
	},
	{
		icon: 'lucide:clock',
		title: 'On-Time Delivery',
		description:
			'We respect your schedule and complete projects on time, every time.',
	},
	{
		icon: 'lucide:users',
		title: 'Expert Craftsmen',
		description:
			'Skilled professionals with years of experience in their specialized trades.',
	},
	{
		icon: 'lucide:check-circle',
		title: '5-Year Warranty',
		description:
			'All work is backed by our comprehensive 5-year warranty for your protection.',
	},
];
---

<section class="py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-16">
				<h2
					class="font-heading text-4xl md:text-5xl font-bold text-secondary-900 mb-6"
				>
					Why Choose Premier Renovations?
				</h2>
				<p class="text-xl text-secondary-600 max-w-3xl mx-auto leading-relaxed">
					When you choose us for your renovation project, you're choosing
					quality, reliability, and a commitment to excellence that's unmatched
					in the industry.
				</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					reasons.map((reason, i) => (
						<div
							class="group text-center"
							key={i}
						>
							<div class="bg-primary-50 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:bg-primary-100 transition-colors">
								<Icon
									name={reason.icon}
									class="h-10 w-10 text-primary-600"
								/>
							</div>
							<h3 class="font-heading text-xl font-bold text-secondary-900 mb-4">
								{reason.title}
							</h3>
							<p class="text-secondary-600 leading-relaxed">
								{reason.description}
							</p>
						</div>
					))
				}
			</div>

			<div class="mt-16 bg-primary-50 rounded-2xl p-8 md:p-12 text-center">
				<h3 class="font-heading text-3xl font-bold text-secondary-900 mb-4">
					Ready to Start Your Project?
				</h3>
				<p class="text-xl text-secondary-600 mb-8 max-w-2xl mx-auto">
					Join hundreds of satisfied homeowners who have trusted Premier
					Renovations to transform their homes. Get your free consultation
					today.
				</p>
				<div
					class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-6"
				>
					<button
						id="scroll-to-contact"
						class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-colors shadow-lg"
					>
						Get Free Estimate
					</button>
					<a
						href="tel:+13163304092"
						class="text-primary-600 hover:text-primary-700 font-semibold text-lg"
					>
						Or call: (316) 330-4092
					</a>
				</div>
			</div>
		</div>
	</div>
</section>

<script type="module" is:inline>
	const btn = document.getElementById('scroll-to-contact');
	if (btn) {
		btn.addEventListener('click', () => {
			const el = document.getElementById('contact');
			if (el) el.scrollIntoView({ behavior: 'smooth' });
		});
	}
</script>
