---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import grassWork from '~/assets/grass-work.png';
import client from '~/data/client/client.json';

const stats = [
	{ icon: 'lucide:clock', label: 'Years of Experience', value: '5+' },
	{ icon: 'lucide:users', label: 'Happy Customers', value: '150+' },
	{ icon: 'lucide:trophy', label: 'Projects Completed', value: '320+' },
	{ icon: 'lucide:map-pin', label: 'Service Areas', value: '10+' },
];
---

<section
	id="about"
	class="py-20 bg-white"
>
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-16">
				<h2
					class="font-heading text-4xl md:text-5xl font-bold text-secondary-900 mb-6"
				>
					About {client.companyName}
				</h2>
				<p class="text-xl text-secondary-600 max-w-4xl mx-auto leading-relaxed">
					Arriaga Constructions and Landscaping is dedicated to providing
					top-notch construction and landscaping services. With a focus on
					honesty, quality, and affordability, we bring your vision to life with
					precision and care.
				</p>
			</div>

			<div class="grid lg:grid-cols-2 gap-12 items-start mb-16">
				<div>
					<Image
						src={grassWork}
						alt="Our renovation team at work"
						class="rounded-2xl shadow-xl w-full h-96 object-cover"
					/>
				</div>

				<div class="space-y-6">
					<h3 class="font-heading text-3xl font-bold text-secondary-900">
						Our Philosophy
					</h3>

					<p class="text-lg text-secondary-700 leading-relaxed">
						Founded in 2020, {client.companyName} focuses on improving how homes
						look, feel, and last. From renovations to landscaping, we help homeowners
						increase their property's value, improve daily living comfort, and enjoy
						spaces built to a higher standard.
					</p>

					<blockquote
						class="text-lg text-secondary-700 leading-relaxed font-bold italic"
					>
						"Every project should add value, not just in appearance, but in how
						your home feels and functions."
					</blockquote>

					<div class="flex flex-wrap gap-4 pt-4">
						<div class="bg-primary-50 px-4 py-2 rounded-lg">
							<span class="text-primary-700 font-semibold">Construction</span>
						</div>
						<div class="bg-primary-50 px-4 py-2 rounded-lg">
							<span class="text-primary-700 font-semibold">Landscaping</span>
						</div>
						<div class="bg-primary-50 px-4 py-2 rounded-lg">
							<span class="text-primary-700 font-semibold">Remodeling</span>
						</div>
					</div>
				</div>
			</div>
			<!-- Stats -->
