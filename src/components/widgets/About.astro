---
import { Icon } from 'astro-icon/components';
import client from '~/data/client/client.json';

const stats = [
	{ icon: 'lucide:clock', label: 'Years of Experience', value: '25+' },
	{ icon: 'lucide:users', label: 'Happy Customers', value: '500+' },
	{ icon: 'lucide:trophy', label: 'Projects Completed', value: '1,200+' },
	{ icon: 'lucide:map-pin', label: 'Service Areas', value: '15+' },
];
---

<section
	id="about"
	class="py-20 bg-white"
>
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-16">
				<h2
					class="font-heading text-4xl md:text-5xl font-bold text-secondary-900 mb-6"
				>
					About {client.companyName}
				</h2>
				<p class="text-xl text-secondary-600 max-w-3xl mx-auto leading-relaxed">
					With over 25 years of experience, we've built our reputation on
					quality craftsmanship, transparent communication, and turning our
					clients' visions into reality.
				</p>
			</div>

			<div class="grid lg:grid-cols-2 gap-12 items-start mb-16">
				<div>
					<img
						src="https://images.pexels.com/photos/8293740/pexels-photo-8293740.jpeg?auto=compress&cs=tinysrgb&w=800&h=600&fit=crop"
						alt="Our renovation team at work"
						class="rounded-2xl shadow-xl w-full h-96 object-cover"
					/>
				</div>

				<div class="space-y-6">
					<h3 class="font-heading text-3xl font-bold text-secondary-900">
						Your Vision, Our Expertise
					</h3>

					<p class="text-lg text-secondary-700 leading-relaxed">
						Founded in 1998, Premier Renovations has grown from a small family
						business to the region's most trusted home renovation company. We
						specialize in transforming homes throughout the Greater Metropolitan
						area with unmatched attention to detail.
					</p>

					<p class="text-lg text-secondary-700 leading-relaxed">
						Our team of licensed professionals brings decades of combined
						experience to every project, ensuring your renovation exceeds
						expectations while staying on time and budget.
					</p>

					<div class="flex flex-wrap gap-4 pt-4">
						<div class="bg-primary-50 px-4 py-2 rounded-lg">
							<span class="text-primary-700 font-semibold"
								>Licensed & Insured</span
							>
						</div>
						<div class="bg-primary-50 px-4 py-2 rounded-lg">
							<span class="text-primary-700 font-semibold">BBB A+ Rating</span>
						</div>
						<div class="bg-primary-50 px-4 py-2 rounded-lg">
							<span class="text-primary-700 font-semibold">5-Year Warranty</span
							>
						</div>
					</div>
				</div>
			</div>

			<!-- Stats -->
			<div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
				{
					stats.map(({ icon, value, label }, i) => (
						<div
							class="text-center group"
							key={i}
						>
							<div class="bg-primary-50 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-100 transition-colors">
								<Icon
									name={icon}
									class="h-8 w-8 text-primary-600"
								/>
							</div>
							<div class="font-heading text-3xl font-bold text-secondary-900 mb-2">
								{value}
							</div>
							<div class="text-secondary-600 font-medium">{label}</div>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
