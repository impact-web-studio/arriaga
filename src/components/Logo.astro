---
import { Image } from 'astro:assets';
import headerLogo from '~/assets/logo-blue.png';
import footerLogo from '~/assets/logo-alt.png';

const { type = 'header' } = Astro.props;

const logo = type === 'header' ? headerLogo : footerLogo;
---

<Image
	src={logo}
	alt="Arriaga Construction & Landscaping Logo"
/>
