---
const { id, containerClass = '', bg, as = 'section' } = Astro.props;

const WrapperTag = as;
---

<WrapperTag
	class:list={['relative']}
	{...id ? { id } : {}}
>
	<div
		class="absolute inset-0 pointer-events-none -z-[1]"
		aria-hidden="true"
	>
		<slot name="bg">
			{bg && <Fragment set:html={bg} />}
		</slot>
	</div>
	<div
		class:list={[
			'relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default intersect-once intersect-half intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-(--animation-fade)',
			,
			containerClass,
		]}
	>
		<slot />
	</div>
</WrapperTag>
